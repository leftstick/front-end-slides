        {{#if title}}
          <a href="{{link}}" class="am-list-item-hd">{{{title}}}</a>
        {{/if}}

        {{#if date}}
          <span class="am-list-date">{{date}}</span>
        {{/if}}

        {{#if desc}}
          <div class="am-list-item-text">{{{desc}}}</div>
        {{/if}}

        {{#if mainAddition}}
          <div class="am-list-news-addon">{{{mainAddition}}}</div>
        {{/if}}
      </li>
    {{/each}}
  {{/ifCond}}
  </ul>
  </div>

  {{#ifCond content.header.morePosition '==' 'bottom'}}<!--更多在底部-->
    {{#if content.header.link}}
      <div class="am-list-news-ft">
        <a class="am-list-news-more am-btn am-btn-default" href="{{content.header.link}}">{{{content.header.moreText}}}</a>
      </div>
    {{/if}}
  {{/ifCond}}
  </div>
{{/this}}