            </a>
            {{#if thumbAddition}}
              <div class="am-list-thumb-addon">{{{thumbAddition}}}</div>
            {{/if}}
          </div>
        {{/if}}
      </li>
    {{/each}}
    {{/ifCond}}

  {{else}}{{!--不带缩略图--}}
    {{#each content.main}}
      <li class="am-g{{#if date}} am-list-item-dated{{/if}}{{#if desc}} am-list-item-desced{{/if}}{{#if img}} am-list-item-thumbed{{/if}}">
        {{!--
          am-list-item-dated - 带日期
