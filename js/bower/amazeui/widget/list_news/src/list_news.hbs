          {{/if}}
          {{#if date}}
            <span class="am-list-date">{{date}}</span>
          {{/if}}

          {{#if desc}}
            <div class="am-list-item-text">{{{desc}}}</div>
          {{/if}}

          {{#if mainAddition}}
            <div class="am-list-news-addon">{{{mainAddition}}}</div>
          {{/if}}
        </div>
      </li>
    {{/each}}
    {{/ifCond}}

    {{#ifCond options.thumbPosition '==' 'right'}} <!--缩略图在标题右边-->
    {{#each content.main}}
      <li class="am-g{{#if date}} am-list-item-dated{{/if}}{{#if desc}} am-list-item-desced{{/if}}{{#if img}} am-list-item-thumbed am-list-item-thumb-right{{/if}}">
        {{!--
