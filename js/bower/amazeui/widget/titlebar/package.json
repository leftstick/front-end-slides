            ]
        }
    ],

    "jsBase": [
        "core.js",
        "util.fastclick.js"
    ],

    "jsDependencies": [],

    "script": "titlebar.js",

    "api": {
        "id": {
            "name": "ID",
            "desc": "模块自定义ID，遵循CSS ID命名规范",
            "type": "text",
            "default": "",
            "required": false
        },
        "className": {
            "name": "Class",
            "desc": "用户自定义模块class，遵循 CSS class 命名规范",
            "type": "text",
            "placeholder": "css类名，多个用空格分隔",
            "default": "",
            "required": false
        },
        "theme": {
            "name": "主题",
            "desc": "模块主题",
            "type": "select",
            "default": "default",
            "required": true,
            "dataList": "<%= pkg.themes %>"
        },
        "content": {
            "type": "Object",
            "item": {
                "left": {
                    "type": "html",
                    "desc": "左侧内容（可选，按需设置）"
                },
                "title": {
                    "type": "html",
                    "desc": "中间内容（可选，按需设置）"
                },
                "right": {
                    "type": "html",
                    "desc": "右侧内容（可选，按需设置）"
                }
            }
        }
    },

    "readme": "http://docs.yunshipei.com/amui/#titlebar",

    "example": "/*\n titlebar 1.0\n 此模块的使用方法： 将原PC网页的数据提取放在这里，最后显示在模块界面上。\n\n 常用用途：通常用来采放logo图片或者title文字。\n\n  示例代码：\n    var data = {\n    \"title\": $(\"#logopart\").html(),\n    \"nav\": [\n        {\n          \"link\": $(\"#logopart\").find(\"a\").attr(\"href\"),\n          \"title\": \"more >\",\n          \"className\": \"\"\n        }\n      ]\n    };\n    return data;\n\n    或者：\n    var data = {\n        \"title\": \"<img src='\"+context.__root+\"logo.png'>\",\n        \"link\": \"http://www.yunshipei.com\",\n        \"nav\": [\n          {\n          \"link\": \"http://amazeui.org\",\n          \"title\": \"更多 >>\",\n          \"className\": \"\"\n        }\n      ]\n    };\n    return data;\n\n */\n\n\n\nvar data = {\n  \"title\": \"\",      // 主标题\n  \"link\": \"\",       // 主标题链接，可选\n  \"nav\": [          // 右侧附加链接，可以为多个\n    {\n      \"link\": \"\",\n      \"title\": \"\",\n      \"className\": \"\"\n    }\n  ]\n};\nreturn data;\n",

    "hidden": false
}
