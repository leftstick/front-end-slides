                    "variable": "paragraph-bg",
                    "name": "背景色",
                    "default": "transparent",
                    "used": [
                        {
                            "selector": "",
                            "property": "background-color"
                        }
                    ]
                },
                {
                    "variable": "paragraph-color",
                    "name": "文字颜色",
                    "default": "#333",
                    "used": [
