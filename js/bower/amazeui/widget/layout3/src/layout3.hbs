{{#this}}
  <div class="am-g am-layout am-layout-3{{#if options.collapsed}} am-g-collapse{{/if}}{{#if widgetId}} {{widgetId}}{{/if}}{{#if className}} {{className}}{{/if}}"{{#if id}} id="{{id}}"{{/if}}>
    <div class="am-u-sm-12 am-u-md-{{#if options.col1}}{{options.col1}}{{else}}4{{/if}}">
      {{{parseLayout 0}}}
    </div>
    <div class="am-u-sm-12 am-u-md-{{#if options.col2}}{{options.col2}}{{else}}4{{/if}}">
      {{{parseLayout 1}}}
    </div>
    <div class="am-u-sm-12 am-u-md-{{#if options.col3}}{{options.col3}}{{else}}4{{/if}}">
      {{{parseLayout 2}}}
    </div>
  </div>
{{/this}}
